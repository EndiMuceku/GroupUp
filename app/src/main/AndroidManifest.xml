<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.endimuceku.groupup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupUp">
        <activity
            android:name=".GroupChatActivity"
            android:parentActivityName=".MainActivity"
            ></activity>
        <activity
            android:name=".UpdateAccountActivity"
            android:label="Update Account Details"
            android:parentActivityName=".ViewAccountActivity" />
        <activity
            android:name=".ViewAccountActivity"
            android:label="Account Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreateEventActivity"
            android:label="@string/createevent_title"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/forgotpassword_title"
            android:parentActivityName=".LogInActivity" />
        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/createaccount_title"
            android:parentActivityName=".LogInActivity" />
        <activity
            android:name=".LogInActivity"
            android:label="@string/signin_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>